const answersList = [
  "Warn",
  "Mute na 1 godzinę",
  "Mute na 24 godziny",
  "Kick",
  "Ban na 30 dni",
  "Ban na 3 miesiące",
  "Ban na 6 miesięcy",
  "Permanentny ban",
  "Ban na 1 dzień",
  "Ban na 7 dni"
];

// losowanie 20 pytań
allQuestions.sort(() => Math.random() - 0.5);
const questions = allQuestions.slice(0, 20);

let current = 0;
let score = 0;

function showQuestion(){
  const q = questions[current];
  document.getElementById("question").innerText =
    `Pytanie ${current+1}/20: ${q.q}`;
  const a = document.getElementById("answers");
  a.innerHTML = "";
  answersList.forEach((ans, i) => {
    a.innerHTML += `
      <div class="answer">
        <label>
          <input type="radio" name="answer" value="${i}">
          ${ans}
        </label>
      </div>`;
  });
}

function nextQuestion(){
  const selected = document.querySelector('input[name="answer"]:checked');
  if(!selected){
    alert("Wybierz odpowiedź!");
    return;
  }

  if(parseInt(selected.value) === questions[current].c){
    score++;
  }

  current++;

  if(current < questions.length){
    showQuestion();
  } else {
    const percent = Math.round((score / questions.length) * 100);
    document.getElementById("quiz").innerHTML = `
      <div class="cmd-title">CMD</div>
      <div class="result-percent">${percent}%</div>
      <button onclick="location.reload()">Spróbuj ponownie</button>
    `;
  }
}

showQuestion();
